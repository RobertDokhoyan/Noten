<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Цвет фона -->
    <solid android:color="#838383" />
    <!-- Радиус закругленных углов -->
    <corners android:radius="8dp" />

    <!-- Отступы внутри поля -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Обводка -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
