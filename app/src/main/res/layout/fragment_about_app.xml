<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textColor="@color/gold"
            android:textStyle="bold" />

        <!-- App Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/app_logo" />

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description"
            android:textColor="@color/light_gold"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp" />

        <!-- Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Preparation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 — Preparation"
                    android:textSize="18sp"
                    android:textColor="@color/gold"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_preparation"
                    android:textColor="@color/light_gold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Processing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 — Processing"
                    android:textSize="18sp"
                    android:textColor="@color/gold"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_processing"
                    android:textColor="@color/light_gold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Editing & Effects -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 — Editing &amp; Effects"
                    android:textSize="18sp"
                    android:textColor="@color/gold"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_settings"
                    android:textColor="@color/light_gold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Exporting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 — Exporting"
                    android:textSize="18sp"
                    android:textColor="@color/gold"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_export"
                    android:textColor="@color/light_gold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
