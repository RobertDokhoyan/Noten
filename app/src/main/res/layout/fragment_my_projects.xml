<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/animated_waterfall"
    android:padding="0dp">

    <ImageView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_12"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/detectedNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝄞  Place your notes  𝄞"
        android:textSize="20sp"
        android:textColor="@color/gold1"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/listview_border"
        android:layout_marginBottom="12dp"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/listViewProjects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/listview_border"
        android:divider="@color/gold"
        android:dividerHeight="3dp"
        android:padding="10dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_gold"
        android:fadeScrollbars="false"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:overScrollMode="always"/>
</LinearLayout>
